<div class="container-fluid">
    {{#each articles}}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{title}}</h3>
        </div>
        <div class="panel-body">{{link}}</div>
    </div>
    <button type="button" class="viewComments-btn" articleId="{{_id}}">View Comments</button>
    <button type="button" class="leaveComment-btn" articleId="{{_id}}">Leave A Comment</button>
    {{/each}}
</div>